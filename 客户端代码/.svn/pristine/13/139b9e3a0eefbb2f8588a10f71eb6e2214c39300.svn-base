#title{
	position: absolute;
	margin-top: 40px;
	margin-left: 65px;
	font-size: 35px;
}
#b1,#b3,#b4{
	font-size: 17px;
	cursor: pointer;
}
#xia{
	animation: zuo 1s ease forwards;
	float: right;
}
#details2{
	position: absolute;
	display: none;
}
#details3{
	position: absolute;
	display: none;
}
#details4{
	position: absolute;
	display: none;
}
@keyframes zuo{
	0%{}
	100%{width: 145px}
}
@keyframes you{
	0%{}
	100%{width: 145px}
}
#neirong{
	color: white;
	font-size: 25px;
	position: absolute;
	margin-top: 50px;
	margin-left: 40px;
	animation: xia 1s ease forwards;
}
@keyframes xia{
	0%{}
	100%{transform: translateY(20px);}
}
